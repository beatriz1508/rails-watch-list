<div class="mt-5">
  <% content_for :title, "New list" %>

  <h1>New list</h1>

  <%= simple_form_for @list do |f| %>
    <%= f.input :name, placeholder: 'ex: Drama' %>
    <%= f.input :description, placeholder: 'Write about your new list' %>
     <%= f.file_field :photo %>
    <%= f.submit "create list", class: 'btn btn-vintage', style: "background-color: #A67B5B; border-color: #A67B5B; color: #ffffff;" %>
  <% end %>

  <div class="mt-3">
     <%= link_to "back to lists", lists_path, class: "btn btn-vintage", style: "background-color: #BFA18F; color: #ffffff;" %>
  </div>
</div>
